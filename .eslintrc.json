{
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:lodash/canonical",
        "plugin:security/recommended"
    ],
    "plugins": [
        "lodash",
        "security",
        "xss",
        "no-unsafe-regex"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "error"
                ]
            }
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "off",
            {
                "code": 140
            }
        ]
    }
}
